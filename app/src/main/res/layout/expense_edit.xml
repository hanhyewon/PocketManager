<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:text="날짜"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:textColor="@color/gray_10"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/expenseDateEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/gray_8"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_marginTop="20dp"
                android:drawableRight="@drawable/arrow_right_lightgray"
                android:background="@drawable/rounded_stroke_basic" />

            <TextView
                android:text="내용"
                android:textSize="18sp"
                android:textColor="@color/gray_10"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/expenseContextEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/gray_8"
                android:textColorHint="@color/gray_8"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_stroke_basic"
                android:textCursorDrawable="@null"/>

            <TextView
                android:text="금액"
                android:textSize="18sp"
                android:textColor="@color/gray_10"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/expenseChargeEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="18sp"
                android:textColor="@color/gray_8"
                android:textColorHint="@color/gray_8"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_stroke_basic"
                android:textCursorDrawable="@null"/>

            <TextView
                android:text="분류"
                android:textSize="18sp"
                android:textColor="@color/gray_10"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioGroup
                android:id="@+id/expenseRadioGroupEdit"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_Fixed_ed"
                    android:textColor="@color/gray_8"
                    android:textSize="16sp"
                    android:text="고정비"
                    android:buttonTint="@color/mint_5"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_Variable_ed"
                    android:textColor="@color/gray_8"
                    android:textSize="16sp"
                    android:text="변동비"
                    android:buttonTint="@color/mint_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="※ 손익분기점 그래프 제공을 위해 꼭 입력해주세요"
                android:textSize="15sp"
                android:textColor="@color/blue_2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="고정비 : 인건비, 자릿세 등 변하지 않는 항목"
                android:textSize="14sp"
                android:textColor="@color/gray_7"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="변동비 : 재료비, 외주가공비, 수수료 등 매출에 따라 변하는 항목"
                android:textSize="14sp"
                android:textColor="@color/gray_7"/>

        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/expenseDataEditBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="수정하기"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:letterSpacing="0.1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/btn_mint"
        style="?android:attr/borderlessButtonStyle"/>

</LinearLayout>