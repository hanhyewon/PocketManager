<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/tv_ProductAddName"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="상품명"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/et_ProductAddName"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_ProductAddPrice"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="가격"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/et_ProductAddPrice"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_ProductAddImage"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="상품 사진 등록(선택)"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn_ProductAddImage"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@drawable/product_button"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/iv_preview"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="30dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_pushProductAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/navy"
        android:textColor="@color/white"
        android:text="상품 등록하기"
        android:textSize="22dp"
        android:padding="20dp" />



</LinearLayout>