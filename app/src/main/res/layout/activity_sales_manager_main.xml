<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--View가 먼저 정의되어있어야 툴바를 가리지 않음-->
    <View
        android:background="@drawable/backgroud_color"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_above="@+id/layoutMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="KT$G 상상마당 프리마켓"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/lblSetting"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:text="4/27 ~ 4/28"
            android:textColor="#000000"
            android:drawableRight="@drawable/ic_settings_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMenu"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/button_shape_03_box_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lblProductManager"
                android:padding="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/gray_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_add_shopping_cart_black_24dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
                <TextView
                    android:text="상품관리"
                    android:textSize="20dp"
                    android:textColor="@color/gray_8"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutOrdertManager"
                android:padding="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:background="@color/gray_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_gradient_black_24dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
                <TextView
                    android:text="주문관리"
                    android:textSize="20dp"
                    android:textColor="@color/gray_8"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutOutManager"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@color/gray_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_account_balance_wallet_black_24dp"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:text="지출관리"
                android:textSize="20dp"
                android:textColor="@color/gray_8"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutRealOut"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@color/gray_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_short_text_black_24dp"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:text="실시간 매출 조회"
                android:textSize="20dp"
                android:textColor="@color/gray_8"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>