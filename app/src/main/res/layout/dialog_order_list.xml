<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/button_shape_03_box_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000000"
            android:text="Order List"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="5dp"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <View
            android:layout_marginTop="5dp"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="상품명"
                android:textSize="16dp"
                android:layout_weight="1"
                android:textColor="@color/gray_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="가격"
                android:gravity="right"
                android:textSize="16dp"
                android:textColor="@color/gray_8"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:text="수량"
                android:gravity="right"
                android:textSize="16dp"
                android:textColor="@color/gray_8"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="상품명A"
                android:textSize="16dp"
                android:layout_weight="1"
                android:textColor="@color/gray_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="5,000"
                android:textSize="16dp"
                android:gravity="right"
                android:textColor="@color/gray_8"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:text="1"
                android:textSize="16dp"
                android:gravity="right"
                android:textColor="@color/gray_8"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="상품명f"
                android:textSize="16dp"
                android:layout_weight="1"
                android:textColor="@color/gray_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="3,900"
                android:textSize="16dp"
                android:gravity="right"
                android:textColor="@color/gray_8"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:text="2"
                android:textSize="16dp"
                android:gravity="right"
                android:textColor="@color/gray_8"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="결제일자"
                android:textSize="16dp"
                android:layout_weight="1"
                android:textColor="@color/gray_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="2019.04.28 13:52:07"
                android:textSize="16dp"
                android:gravity="right"
                android:textColor="@color/gray_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="결제금액"
                android:textSize="16dp"
                android:layout_weight="1"
                android:textColor="@color/gray_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="12,800원"
                android:textSize="16dp"
                android:gravity="right"
                android:textColor="#ff0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_marginTop="55dp"
            android:layout_marginBottom="15dp"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lblback"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_rounded_transparent_border_317b9f_rd_100"
                android:padding="10dp"
                android:gravity="center"
                android:text="이전"
                android:textSize="16dp"
                android:layout_weight="1"
                android:textColor="@color/gray_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/lblPay"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:padding="10dp"
                android:gravity="center"
                android:text="결제"
                android:textSize="16dp"
                android:background="@drawable/button_rounded_blue_border_white_rd_10"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>