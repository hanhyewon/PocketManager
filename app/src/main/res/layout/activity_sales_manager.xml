<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16dp"
            android:text="판매"
            android:textColor="@color/gray_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/editArea"
            android:hint="참여하는 행사명 또는 지역명 입력"
            android:textColorHint="@color/gray_8"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/gray_8"
            android:background="@drawable/button_shape_03_box_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="16dp"
            android:text="판매기간"
            android:textColor="@color/gray_8"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/editStart"
                android:text="2019-05-15"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/gray_8"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_date_range"
                android:background="@drawable/button_shape_03_box_gray"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="-"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/editEnd"
                android:text="2019-05-15"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:layout_weight="1"
                android:textColor="@color/gray_8"
                android:drawableRight="@drawable/ic_date_range"
                android:background="@drawable/button_shape_03_box_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/lblOk"
        android:padding="20dp"
        android:text="등록하기"
        android:background="@color/gray_cc"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>