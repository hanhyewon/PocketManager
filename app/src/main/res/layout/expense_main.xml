<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="9"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_date"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:text="일간"
                    android:background="#0000FF"
                    android:textColor="#FFFFFF"
                    />

                <Button
                    android:id="@+id/btn_term"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:text="기간별"
                    android:background="#FFFFFF"
                    android:textColor="#0000FF"
                    />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                //리니어 레이아웃 두개 두고 그 두개의 visible 하고 클릭되는거 속성 값 변경해 가면서 사용
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    //일간
                    <TextView
                        android:id="@+id/tv_ddate"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:text="2019.04.23 (화)"
                        android:textSize="30dp"/>
                    <TextView
                        android:id="@+id/tv_dsum"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:text="15,000원"
                        android:textSize="25dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    //기간별//날짜 스피너 기능 제거하고 추가하기
                    <TextView
                        android:id="@+id/tv_tdate"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:text="2019.04.23 (화)"
                        android:textSize="30dp"/>
                    <TextView
                        android:id="@+id/tv_tsum"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:text="15,000원"
                        android:textSize="25dp"/>

                    //리스트뷰
                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fillViewport="true">

                            <ListView
                                android:id="@+id/eListView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            </ListView>

                        </ScrollView>

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            //리스트에서 단순히 동작을 위한 버튼의 아이디는 명사+동사로,
            //이동한 폼 내에서 활용하는 버튼의 아이디는 동사+명사로 주었습니다.
            <Button
                android:id="@+id/btn_ExpensePush"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#5d6c7e"
                android:textColor="#FFFFFF"
                android:text="상품 등록"
                android:textSize="30dp"
                android:padding="10dp">

            </Button>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>