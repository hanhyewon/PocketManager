<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_date"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="일간"
                android:textSize="20dp"
                android:background="@color/blue_1"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_term"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="기간별"
                android:textSize="20dp"
                android:background="@color/white"
                android:textColor="@color/blue_1"
                />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 리니어 레이아웃 두개 두고 그 두개의 visible 하고 클릭되는거 속성 값 변경해 가면서 사용 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <!-- 일간 -->
                <TextView
                    android:id="@+id/tv_ddate"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:text="2019.04.23 (화)"
                    android:textSize="25dp"/>
                <TextView
                    android:id="@+id/tv_dsum"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:text="15,000원"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <!-- //기간별//날짜 스피너 기능 제거하고 추가하기 -->
                <TextView
                    android:id="@+id/tv_tdate"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:text="2019.04.23 (화)"
                    android:textSize="25dp"/>
                <TextView
                    android:id="@+id/tv_tsum"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:text="15,000원"
                    android:textSize="20dp"/>

                <!-- ListView는 ScrollView 기능이 포함되어있어서 별도의 ScrollView 태그 필요하지 않아요!-->
                <ListView
                    android:id="@+id/eListView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gray_2">

                </ListView>

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <!--
    //리스트에서 단순히 동작을 위한 버튼의 아이디는 명사+동사로,
    //이동한 폼 내에서 활용하는 버튼의 아이디는 동사+명사로 주었습니다.
    -->
    <Button
        android:id="@+id/btn_ExpensePush"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/navy"
        android:textColor="#FFFFFF"
        android:text="지출 등록"
        android:textSize="22dp"
        android:padding="20dp" />

</LinearLayout>
